{
  "variables": {
    "proxmox_url": "{{ env `PROXMOX_URL` }}",
    "proxmox_node": "{{ env `PROXMOX_NODE` }}",
    "proxmox_username": "{{ env `PROXMOX_USERNAME` }}",
    "proxmox_token": "{{ env `PROXMOX_TOKEN` }}",
    "template_name": "ubuntu-22.04-enterprise-app",
    "template_description": "Ubuntu 22.04 LXC template for Enterprise App deployment"
  },
  "builders": [
    {
      "type": "proxmox",
      "proxmox_url": "{{ user `proxmox_url` }}",
      "node": "{{ user `proxmox_node` }}",
      "username": "{{ user `proxmox_username` }}",
      "token": "{{ user `proxmox_token` }}",
      "insecure_skip_tls_verify": false,
      
      "template_name": "{{ user `template_name` }}",
      "template_description": "{{ user `template_description` }}",
      
      "memory": 2048,
      "cores": 2,
      "disk_size": "20G",
      
      "network_adapters": [
        {
          "bridge": "vmbr0"
        }
      ],
      
      "ssh_username": "root",
      "ssh_timeout": "15m"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install -y software-properties-common",
        "add-apt-repository ppa:deadsnakes/ppa -y",
        "apt-get update",
        "apt-get install -y python3.13 python3.13-venv python3.13-dev git curl wget",
        "curl -sS https://bootstrap.pypa.io/get-pip.py -o get-pip.py",
        "python3.13 get-pip.py",
        "rm get-pip.py",
        "apt-get install -y postgresql-client redis-tools",
        "apt-get install -y build-essential libssl-dev libffi-dev",
        "apt-get clean",
        "rm -rf /var/lib/apt/lists/*"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "useradd -m -s /bin/bash deploy",
        "mkdir -p /opt/enterprise-app",
        "chown deploy:deploy /opt/enterprise-app",
        "echo 'deploy ALL=(ALL) NOPASSWD:ALL' > /etc/sudoers.d/deploy"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "systemctl enable ssh",
        "systemctl start ssh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}
