# {{ ansible_managed }}
# Docker Compose configuration for {{ environment }}
version: '3.9'

services:
  app:
    image: {{ docker_registry }}/{{ app_name }}:{{ app_version }}
    container_name: {{ app_name }}_{{ environment }}
    restart: unless-stopped
    env_file:
      - .env
    ports:
      - "{{ app_port }}:8000"
    networks:
      - {{ app_name }}_network
    volumes:
      - app_logs:/app/logs
      - app_data:/app/data
{% if environment == 'production' %}
    deploy:
      replicas: {{ app_replicas | default(3) }}
      resources:
        limits:
          cpus: '{{ app_cpu_limit | default("1.0") }}'
          memory: {{ app_memory_limit | default("1G") }}
        reservations:
          cpus: '{{ app_cpu_reservation | default("0.5") }}'
          memory: {{ app_memory_reservation | default("512M") }}
{% endif %}
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
        labels: "app={{ app_name }},env={{ environment }}"

{% if environment != 'development' %}
  nginx:
    image: nginx:alpine
    container_name: {{ app_name }}_nginx_{{ environment }}
    restart: unless-stopped
    ports:
      - "80:80"
{% if environment == 'production' %}
      - "443:443"
{% endif %}
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
{% if environment == 'production' %}
      - ./ssl:/etc/nginx/ssl:ro
{% endif %}
      - nginx_logs:/var/log/nginx
    networks:
      - {{ app_name }}_network
    depends_on:
      - app
{% endif %}

volumes:
  app_logs:
  app_data:
{% if environment != 'development' %}
  nginx_logs:
{% endif %}

networks:
  {{ app_name }}_network:
    driver: bridge