[Unit]
Description={{ app_name }} Application Service
After=network.target

[Service]
Type=simple
User={{ deploy_user | default('deploy') }}
Group={{ deploy_user | default('deploy') }}
WorkingDirectory=/opt/{{ app_name }}
Environment="PATH=/opt/{{ app_name }}/venv/bin"
Environment="PYTHONUNBUFFERED=1"
EnvironmentFile=/opt/{{ app_name }}/.env
ExecStart={{ app_exec_start | default('/opt/' + app_name + '/venv/bin/uvicorn src.api.main:app --host 0.0.0.0 --port 8000 --workers 4') }}
Restart=always
RestartSec=10

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/{{ app_name }}/logs /opt/{{ app_name }}/data

# Resource limits
LimitNOFILE=65536
LimitNPROC=4096

[Install]
WantedBy=multi-user.target
