# ==============================================================================
# NetBox Geographic Data Integration - Environment Configuration
# ==============================================================================
# Date: 2025-12-13
# Version: 1.0.0
# Python: 3.13.1

# ------------------------------------------------------------------------------
# Application Settings
# ------------------------------------------------------------------------------
APP_NAME=netbox-geo-foss
APP_ENV=development
APP_DEBUG=true
APP_VERSION=1.0.0

# ------------------------------------------------------------------------------
# NetBox Configuration
# ------------------------------------------------------------------------------
NETBOX_URL=https://netbox.example.com
NETBOX_TOKEN=your_api_token_here
NETBOX_VERIFY_SSL=true
NETBOX_TIMEOUT=30
NETBOX_MAX_RETRIES=3
NETBOX_API_VERSION=3.7

# ------------------------------------------------------------------------------
# Geographic Data Sources
# ------------------------------------------------------------------------------
GEONAMES_USERNAME=your_geonames_username
GEONAMES_API_URL=https://api.geonames.org
NATURALEARTH_DATA_URL=https://www.naturalearthdata.com/downloads/
OSM_API_URL=https://nominatim.openstreetmap.org

# ------------------------------------------------------------------------------
# Data Management
# ------------------------------------------------------------------------------
DATA_CACHE_DIR=./cache
DATA_UPDATE_INTERVAL_DAYS=30
DATA_BATCH_SIZE=1000
DATA_MIN_CITY_POPULATION=15000

# ------------------------------------------------------------------------------
# Performance & Rate Limiting
# ------------------------------------------------------------------------------
RATE_LIMIT_CALLS_PER_MINUTE=100
WORKER_THREADS=4
ASYNC_ENABLED=true